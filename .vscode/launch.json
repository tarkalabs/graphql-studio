// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
        {
            "name": "Run ERD Explorer",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
				"${workspaceRoot}",
				"--extensionDevelopmentPath=${workspaceRoot}/Extensions/ERD Explorer" 
			],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/Extensions/ERD Explorer/out/**/*.js" ],
            "preLaunchTask": "npm: watch"
        },
        {
            "name": "Test ERD Explorer",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
				"${workspaceRoot}",
				"--extensionDevelopmentPath=${workspaceRoot}/Extensions/ERD Explorer", 
				"--extensionTestsPath=${workspaceRoot}/Extensions/ERD Explorer/out/test" 
			],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/Extensions/ERD Explorer/out/test/**/*.js" ],
            "preLaunchTask": "npm: watch"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Langauge Server",
            "protocol": "inspector",
            "port": 6005,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/Extensions/ERD Explorer/out/**/*.js"
            ]
        }
	]
}
