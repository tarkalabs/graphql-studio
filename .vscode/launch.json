// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run ERD Explorer",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"${workspaceFolder}/ERD Explorer/erd-explorer",
				"--extensionDevelopmentPath=${workspaceFolder}/ERD Explorer/erd-explorer"
			],
			"outFiles": [
				"${workspaceFolder}/ERD Explorer/erd-explorer/out/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"name": "Test ERD Explorer",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"${workspaceFolder}/ERD Explorer/erd-explorer",
				"--extensionDevelopmentPath=${workspaceFolder}/ERD Explorer/erd-explorer",
				"--extensionTestsPath=${workspaceFolder}/ERD Explorer/erd-explorer/out/test/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/ERD Explorer/erd-explorer/out/test/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		}
	]
}
