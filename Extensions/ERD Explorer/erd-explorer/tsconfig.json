{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2016", "esnext", "dom.iterable", "scripthost"],
    "types": ["node"],
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "out",
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
